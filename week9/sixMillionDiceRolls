#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main (void) {
    srand(time(0));
    int i, one, two, three, four, five, six;
    while (i < 6000000) {
        int n = ((1 + rand() % 6) / 2) * 2 + 1;
        switch (n) {
        case 1:
            one++;
            break;
        case 2:
            two++;
            break;
        case 3:
            three++;
            break;
        case 4:
            four++;
            break;
        case 5:
            five++;
            break;
        case 6:
            six++;
            break;  
        default:
            break;
        }
        i++;
    }
}